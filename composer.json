{
    "name": "vishwac09/extended-php-guidelines",
    "type": "phpcodesniffer-standard",
    "description": "Provides set of additional coding guidelines.",
    "keywords": ["phpcs", "standards", "code review"],
    "license": "GPL-2.0+",
    "require": {
        "php": ">=7.1",
        "ext-mbstring": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "squizlabs/php_codesniffer": "^3.6.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=3.7 <6"
    },
    "autoload": {
        "psr-4": {
            "EPG\\": "EPG/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    }
}